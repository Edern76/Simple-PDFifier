<Window x:Class="Simple_PDFifier.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_PDFifier"
        mc:Ignorable="d"
        Title="About" Height="200" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="name" HorizontalAlignment="Center" Height="24" Margin="181,10,171.6,0" TextWrapping="Wrap" Text="Simple PDFifier" VerticalAlignment="Top" Width="141" TextAlignment="Center"/>
        <TextBlock x:Name="author" Height="24"  TextWrapping="Wrap" Text="Made by Gawein LE GOFF using iTextSharp and WPF" VerticalAlignment="Top" TextAlignment="Center" Margin="0,46,-0.4,0" Width="300"/>
        <TextBlock x:Name="description" Height="48"  TextWrapping="Wrap" Text="This simple application allows you to convert image files to PDF in a few clicks." VerticalAlignment="Top" TextAlignment="Center"  Width="400" Grid.Row="1" Margin="47,9.6,46.6,0"/>
        <TextBlock x:Name="license" Height="24"  TextWrapping="Wrap" Text="MIT License" VerticalAlignment="Top" TextAlignment="Center" Margin="97,57.6,96.6,0" Width="300" Grid.Row="1"/>

    </Grid>
</Window>
